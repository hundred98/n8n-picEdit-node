{
  "compilerOptions": {
    "lib": [
      "es2017",
      "es2019"
    ],
    "types": [
      "node"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strict": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist/",
    "target": "es2019",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "index.ts",
    "credentials/**/*",
    "nodes/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "**/*.spec.ts"
  ]
}